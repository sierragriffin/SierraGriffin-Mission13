<!--HTML for my Teams View Componet-->
@{
}

@model IEnumerable<string>

<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-teamName="" class="btn btn-block @(ViewBag.SelectedTeam == null ? "btn-primary" : "btn-outline-secondary")">HOME</a>

    @foreach (string team in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-teamName="@team" class="btn btn-block @(ViewBag.SelectedTeam == team ? "btn-primary" : "btn-outline-secondary")">@team</a>
    }
</div>

