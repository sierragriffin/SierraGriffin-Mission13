<!--Delete Confirmation Page View-->

@{
    ViewData["Title"] = "Delete Confirmation";
}

@model Bowler  

<div style="margin-left:80px">

    <br />
    <h3>Are you sure you want to delete the record for this bowler?</h3>

    <form method="post" asp-controller="Home" asp-action="Delete">

        <!--Delete button-->
        <button type="submit" class="btn btn-danger">Delete</button>

        <!--Cancel button-->
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>

        <input type="hidden" asp-for="BowlerID">

    </form>

</div>
